double apply_inflation(int year, int month)
{
	// инфляция применяется только в январе, первый год инфляции нет
	if (month == 1 and year > 2030)
	{
		double inflation_rate = inf_dis(gen);
		double multiplier = 1.0 + inflation_rate / 100.0;

		printf("Инфляция в %d году: +%.2f%%\n\n", year, inflation_rate);

		// базовые расходы Бибы
		Biba.food = (RUB)(Biba.food * multiplier);
		Biba.rent = (RUB)(Biba.rent * multiplier);
		Biba.cat = (RUB)(Biba.cat * multiplier);
		Biba.dog = (RUB)(Biba.dog * multiplier);

		// транспорт
		Biba.car.gaz = (RUB)(Biba.car.gaz * multiplier);
		Biba.car.service = (RUB)(Biba.car.service * multiplier);
		Biba.car.tires = (RUB)(Biba.car.tires * multiplier);
		Biba.car.oil = (RUB)(Biba.car.oil * multiplier);

		// базовые расходы Бобы
		Boba.food = (RUB)(Boba.food * multiplier);
		Boba.rent = (RUB)(Boba.rent * multiplier);
		Boba.cat = (RUB)(Boba.cat * multiplier);
		Boba.dog = (RUB)(Boba.dog * multiplier);

		// транспорт
		Boba.car.gaz = (RUB)(Boba.car.gaz * multiplier);
		Boba.car.service = (RUB)(Boba.car.service * multiplier);
		Boba.car.tires = (RUB)(Boba.car.tires * multiplier);
		Boba.car.oil = (RUB)(Boba.car.oil * multiplier);

		// метро
		Boba.metro.gaz = (RUB)(Boba.metro.gaz * multiplier);

		return inflation_rate;
	}
	return 0.0;
}


