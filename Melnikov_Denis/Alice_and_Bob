class Bank
{
private:
	float dollar_exchange_rate;
	float euro_exchange_rate;
	
public:
	RUB account_rub;
	USD account_usd;
	EUR account_eur;
	
	void RUB_to_USD(const RUB RUB)
	{
		account_rub -= RUB;
		account_usd = RUB / dollar_exchange_rate;
	}

	void RUB_to_EUR(const RUB RUB)
	{
		account_rub -= RUB;
		account_eur = RUB / euro_exchange_rate;
	}

	void print()
	{
		std::cout << "RUB = " << account_rub;
	}

};

