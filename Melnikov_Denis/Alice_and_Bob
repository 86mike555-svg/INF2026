// ---------- УРОВНИ ЗАРПЛАТЫ ----------
enum class IncomeLevel { Low, Medium, High, Rich };

IncomeLevel getIncomeLevel(double salary) {
    if (salary < 30000)  return IncomeLevel::Low;
    if (salary < 70000)  return IncomeLevel::Medium;
    if (salary < 150000) return IncomeLevel::High;
    return IncomeLevel::Rich;
}

// ---------- БЮДЖЕТНЫЙ РЕЖИМ ----------
enum class BudgetMode { Normal, NoSnacks, Cheap };

BudgetMode getBudgetMode(double spentSoFar, double budget, int daysLeft, int totalDays) {
    int daysDone = totalDays - daysLeft;
    if (daysDone == 0) return BudgetMode::Normal;
    double avgPerDay = spentSoFar / daysDone;
    double projectedTotal = avgPerDay * totalDays;
    if (projectedTotal <= budget)        return BudgetMode::Normal;
    if (projectedTotal <= budget * 1.2)  return BudgetMode::NoSnacks;
    return BudgetMode::Cheap;
}

