        }();

    const std::vector<ShopProduct>* products = nullptr;
    switch (level) {
    case IncomeLevel::Low:    products = &productsLow;    break;
    case IncomeLevel::Medium: products = &productsMedium; break;
    case IncomeLevel::High:   products = &productsHigh;   break;
    case IncomeLevel::Rich:   products = &productsRich;   break;
    }

    std::unordered_map<std::string, const ShopProduct*> productMap;
    for (const auto& p : *products)
        productMap[p.name] = &p;

    ShopResult result;
    for (const auto& [name, needed] : shoppingList) {
        auto it = productMap.find(name);
        if (it == productMap.end()) continue;

        const ShopProduct& product = *it->second;
        int    packsNeeded = (int)std::ceil(needed / product.packSize);
        double boughtAmount = packsNeeded * product.packSize;
        double cost = packsNeeded * product.pricePerPack;

        result.items.push_back({ name, packsNeeded, boughtAmount, cost });
        result.totalSpent += cost;
    }
    return result;
}

// ---------- ВСПОМОГАТЕЛЬНОЕ ----------
bool hasHoliday(int month, int day) {
    if (month == 2 && day == 23) return true;
    if (month == 3 && day == 8)  return true;
    if (month == 12 && day == 31) return true;
    return false;
}

int daysInMonth(int month) {
    constexpr int days[] = { 0,31,28,31,30,31,30,31,31,30,31,30,31 };
    if (month < 1 || month > 12) return 30;
    return days[month];
}

double buyIfNeeded(std::unordered_map<std::string, double>& fridge,
    const Ingredient& ing, IncomeLevel level) {
    double have = fridge[ing.name];
    if (have >= ing.amount) return 0.0;
    ShopResult result = shop({ {ing.name, ing.amount - have} }, level);
    for (const auto& item : result.items)
        fridge[item.name] += item.totalAmount;
    return result.totalSpent;
}

double cookMeal(std::unordered_map<std::string, double>& fridge,
    const Recipe& meal, IncomeLevel level) {
    double spent = 0.0;
    for (const auto& ing : meal.ingredients) {
        spent += buyIfNeeded(fridge, ing, level);
        fridge[ing.name] -= ing.amount;
    }
    return spent;
}

// ---------- ОСНОВНАЯ ФУНКЦИЯ ----------
RUB Food(int month,
    std::unordered_map<std::string, double> &fridge,
    double salary) {

    std::mt19937 gen(std::random_device{}());
    IncomeLevel level = getIncomeLevel(salary);
    double      budget = salary * 0.30;
    double      totalSpent = 0.0;
    int         totalDays = daysInMonth(month);

    auto pickRandom = [&gen](const std::vector<Recipe>& v) -> const Recipe& {
        std::uniform_int_distribution<> dist(0, (int)v.size() - 1);
        return v[dist(gen)];
        };
    auto chance = [&gen](int percent) -> bool {
        std::uniform_int_distribution<> dist(1, 100);
        return dist(gen) <= percent;
        };

    // ===== ОБЫЧНЫЕ РЕЦЕПТЫ =====
    const std::vector<Recipe> porridges{
        {"Овсянка",      {{"овсянка", 80.0}, {"молоко", 200.0}}},
        {"Гречка",       {{"гречка",  80.0}, {"масло",   10.0}}},
        {"Рисовая каша", {{"рис",     80.0}, {"молоко", 200.0}}},
        {"Манка",        {{"манка",   60.0}, {"молоко", 200.0}}},
    };
    const std::vector<Recipe> lightBreakfast{
        {"Бутерброд с сыром",    {{"хлеб",   80.0}, {"сыр",     30.0}, {"масло", 5.0}}},
        {"Бутерброд с колбасой", {{"хлеб",   80.0}, {"колбаса", 40.0}}},
        {"Яичница",              {{"яйца",    2.0}, {"масло",   10.0}}},
        {"Творог",               {{"творог",150.0}, {"сметана", 30.0}}},
        {"Йогурт с бананом",     {{"йогурт",200.0}, {"банан",    1.0}}},
    };
    const std::vector<Recipe> breakfastDrinks{
        {"Чай",  {{"чай",   5.0}}},
        {"Кофе", {{"кофе", 10.0}}},
        {"Сок",  {{"сок", 200.0}}},
    };
    const std::vector<Recipe> firstCourse{
        {"Борщ",         {{"борщ (набор)", 1.0}, {"сметана",  50.0}}},
        {"Куриный суп",  {{"курица",     300.0}, {"картошка",150.0}, {"морковь", 50.0}}},
        {"Гречневый суп",{{"гречка",      80.0}, {"морковь",  50.0}, {"картошка",100.0}}},
    };
    const std::vector<Recipe> secondCourse{
        {"Курица с картошкой",   {{"курица",   300.0}, {"картошка", 250.0}}},
        {"Макароны с сыром",     {{"макароны", 200.0}, {"сыр",       50.0}, {"масло", 15.0}}},
        {"Гречка с говядиной",   {{"гречка",   150.0}, {"говядина", 250.0}}},
        {"Рис с курицей",        {{"рис",      150.0}, {"курица",   250.0}}},
        {"Картошка с сосисками", {{"картошка", 250.0}, {"сосиски",  150.0}}},
    };
    const std::vector<Recipe> salads{
        {"Салат овощной",   {{"помидоры", 150.0}, {"огурцы",  150.0}, {"сметана", 30.0}}},
        {"Салат капустный", {{"капуста",  200.0}, {"морковь",  80.0}, {"сметана", 30.0}}},
        {"Помидоры",        {{"помидоры", 200.0}}},
    };
    const std::vector<Recipe> lunchDrinks{
        {"Чай",  {{"чай",   5.0}}},
        {"Сок",  {{"сок", 300.0}}},
        {"Вода", {{"вода",500.0}}},
    };
    const std::vector<Recipe> lightDinner{
        {"Бутерброд",          {{"хлеб",   80.0}, {"колбаса",  40.0}}},
        {"Яичница",            {{"яйца",    2.0}, {"масло",    10.0}}},
        {"Творог со сметаной", {{"творог",150.0}, {"сметана",  30.0}}},
        {"Йогурт",             {{"йогурт",200.0}}},
        {"Каша",               {{"гречка", 80.0}, {"масло",    10.0}}},
    };
    const std::vector<Recipe> dinnerDrinks{
        {"Чай",  {{"чай",   5.0}}},
        {"Кофе", {{"кофе", 10.0}}},
        {"Вода", {{"вода",300.0}}},
    };
    const std::vector<Recipe> holidayLunches{
        {"Праздничная курица", {{"курица",  800.0}, {"картошка", 500.0}, {"сметана", 100.0}}},
        {"Плов праздничный",   {{"рис",     300.0}, {"говядина", 600.0}, {"морковь", 150.0}, {"масло", 50.0}}},
    };
    const std::vector<Recipe> snacks{
        {"Печенье", {{"печенье", 50.0}}},
        {"Шоколад", {{"шоколад", 25.0}}},
        {"Чипсы",   {{"чипсы",   40.0}}},
        {"Орехи",   {{"орехи",   30.0}}},
        {"Банан",   {{"банан",    1.0}}},
        {"Яблоко",  {{"яблоко",  1.0}}},
        {"Лапша",   {{"лапша",   1.0}}},
    };
    const std::vector<Recipe> dayDrinks{
        {"Чай",  {{"чай",   5.0}}},
        {"Кофе", {{"кофе", 10.0}}},
        {"Сок",  {{"сок", 200.0}}},
        {"Вода", {{"вода",500.0}}},
    };

    // ===== ДЕШЁВЫЕ ЗАМЕНЫ =====
    const std::vector<Recipe> cheapPorridges{
        {"Овсянка на воде", {{"овсянка", 80.0}, {"вода", 200.0}}},
        {"Гречка на воде",  {{"гречка",  80.0}}},
    };
    const std::vector<Recipe> cheapLight{
        {"Хлеб с маслом", {{"хлеб", 80.0}, {"масло", 5.0}}},
        {"Яйцо варёное",  {{"яйца",  2.0}}},
    };
    const std::vector<Recipe> cheapDrinks{
        {"Чай",  {{"чай",   5.0}}},
        {"Вода", {{"вода", 300.0}}},
    };
    const std::vector<Recipe> cheapFirst{
        {"Картофельный суп", {{"картошка", 200.0}, {"морковь", 50.0}}},
        {"Гречневый суп",    {{"гречка",    80.0}, {"морковь", 50.0}}},
    };
    const std::vector<Recipe> cheapSecond{
        {"Гречка с маслом", {{"гречка",   150.0}, {"масло", 10.0}}},
        {"Макароны",        {{"макароны", 200.0}, {"масло", 10.0}}},
        {"Рис с маслом",    {{"рис",      150.0}, {"масло", 10.0}}},
    };
    const std::vector<Recipe> cheapDinner{
        {"Хлеб с маслом", {{"хлеб",   80.0}, {"масло",  5.0}}},
        {"Каша на воде",  {{"гречка", 80.0}}},
        {"Яйцо варёное",  {{"яйца",   2.0}}},
    };

    // ---------- ДНИ МЕСЯЦА ----------
    for (int day = 1; day <= totalDays; ++day) {
        bool       holiday = hasHoliday(month, day);
        int        daysLeft = totalDays - day;
        BudgetMode mode = getBudgetMode(totalSpent, budget, daysLeft, totalDays);

        const auto& porrVec = (mode == BudgetMode::Cheap) ? cheapPorridges : porridges;
        const auto& lightBVec = (mode == BudgetMode::Cheap) ? cheapLight : lightBreakfast;
        const auto& bDrinkVec = (mode == BudgetMode::Cheap) ? cheapDrinks : breakfastDrinks;
        const auto& firstVec = (mode == BudgetMode::Cheap) ? cheapFirst : firstCourse;
        const auto& secondVec = (mode == BudgetMode::Cheap) ? cheapSecond : secondCourse;
        const auto& lDrinkVec = (mode == BudgetMode::Cheap) ? cheapDrinks : lunchDrinks;
        const auto& dinnerVec = (mode == BudgetMode::Cheap) ? cheapDinner : lightDinner;
        const auto& dDrinkVec = (mode == BudgetMode::Cheap) ? cheapDrinks : dinnerDrinks;

        // Завтрак
        totalSpent += cookMeal(fridge, pickRandom(porrVec), level);
        totalSpent += cookMeal(fridge, pickRandom(lightBVec), level);
        totalSpent += cookMeal(fridge, pickRandom(bDrinkVec), level);

        // Обед
        totalSpent += cookMeal(fridge, pickRandom(firstVec), level);
        totalSpent += cookMeal(fridge,
            (holiday && mode == BudgetMode::Normal)
            ? pickRandom(holidayLunches)
            : pickRandom(secondVec),
            level);
        if (mode != BudgetMode::Cheap)
            totalSpent += cookMeal(fridge, pickRandom(salads), level);
        totalSpent += cookMeal(fridge, pickRandom(lDrinkVec), level);

        // Ужин
        totalSpent += cookMeal(fridge, pickRandom(dinnerVec), level);
        totalSpent += cookMeal(fridge, pickRandom(dDrinkVec), level);

        // Перекусы — только в Normal режиме
        if (mode == BudgetMode::Normal) {
            if (chance(70)) totalSpent += cookMeal(fridge, pickRandom(snacks), level);
            if (chance(80)) totalSpent += cookMeal(fridge, pickRandom(dayDrinks), level);
        }
    }

    return totalSpent;
}


