RUB Alice_service_station(const int month, const int mileage /*const int random*/)
{
	RUB cost_of_repair = 0;

	std::map<std::string, RUB> parts_costs
	{
		{"filter_oil", 1'000},
		{"filter_air", 750},
		{"filter_fuel", 10'000},
		{"filter_cabin", 5'600},
		{"antifreeze", 2'400},
		{"break_fluid", 9'000},
		{"motor_oil", 5'000},
		{"spark_plugs", 10'000}
	};

	if (month == 7)
	{
		for (const auto& [product, price] : parts_costs)
			cost_of_repair += price;
	}

	cost_of_repair += 500;

	return cost_of_repair;
}


// ---------- СТРУКТУРЫ ----------
struct Ingredient {
    std::string name;
    double amount;
};

struct Recipe {
    std::string name;
    std::vector<Ingredient> ingredients;
};

struct ShopProduct {
    std::string name;
    double pricePerPack;
    double packSize;
};

struct PurchasedItem {
    std::string name;
    int packsBought;
    double totalAmount;
    double totalPrice;
};

struct ShopResult {
    std::vector<PurchasedItem> items;
    double totalSpent = 0;
};

