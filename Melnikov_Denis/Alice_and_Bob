struct Event
{
	std::string name_event;
	float chance;
	int income;
	bool used = false;
};

struct MonthResult 
{
	std::vector<std::string> events;
	int totalIncome = 0;
};

MonthResult generateMonthlyEvents() 
{
	static std::random_device rd;
	static std::mt19937 gen(rd());

	std::vector<Event> positive
	{
		{"You found the missing wallet", 20, 750},
		{"Completed a complex task", 30, 5'000},
		{"Fulfilled the sales plan", 40, 7'000},
		{"Won the lottery", 0.001, 1'000'000},
		{"Returned bottels", 70, 200},
		{"Returned wasted paper", 70, 500},
		{"Recevied store bonus points", 50, 1'500},
		{"Found loose change in the couch", 20, 100},
		{"Found 100 bills on the street", 12, 100},
		{"Found 500 bills on the street", 7, 500},
		{"Found 1000 bills on the street", 5, 1'000}
	};

	std::vector<Event> negative
	{
		{"Пропала мелочь из кошелька", 20, -100},
		{"Задержка транспорта", 30, -50},
		{"Потерял вещь", 10, -700},
		{"Случайная ссора", 15, -200}
	};

	static std::vector<Event> oneTimePositive{
		{"Выиграл крупный приз", 5, 5000, false},
		{"Получил неожиданную премию", 3, 3000, false}
	};

	static std::vector<Event> oneTimeNegative{
		{"Серьезная поломка техники", 4, -4000, false},
		{"Потерял важный документ", 3, -1500, false}
	};

	std::uniform_int_distribution<> totalDist(6, 15);
	int totalEvents = totalDist(gen);

	std::uniform_real_distribution<> moodDist(0.3, 0.7);
	std::bernoulli_distribution typeDist(moodDist(gen));

	std::vector<int> posWeights, negWeights;
	for (const auto& e : positive) posWeights.push_back(e.chance);
	for (const auto& e : negative) negWeights.push_back(e.chance);

	std::discrete_distribution<> posDist(posWeights.begin(), posWeights.end());
	std::discrete_distribution<> negDist(negWeights.begin(), negWeights.end());

	MonthResult result;
	result.events.reserve(totalEvents);

	// Очень редкий шанс одноразового события
	std::bernoulli_distribution ultraRare(0.02);

	auto pickOneTime = [&](std::vector<Event>& vec) -> bool
	{
		std::vector<int> weights;
		std::vector<int> indices;

		for (int i = 0; i < (int)vec.size(); ++i) 
		{
			if (!vec[i].used) 
			{
				weights.push_back(vec[i].chance);
				indices.push_back(i);
			}
		}

		if (weights.empty()) return false;

		std::discrete_distribution<> dist(weights.begin(), weights.end());
		int local = dist(gen);
		int realIndex = indices[local];

		vec[realIndex].used = true;
		result.events.push_back(vec[realIndex].name_event);
		result.totalIncome += vec[realIndex].income;
		return true;
	};

	for (int i = 0; i < totalEvents; ++i) 
	{
		bool isPositive = typeDist(gen);

		// Проверка ультра-редкого события
		if (ultraRare(gen)) 
		{
			bool success = false;
			if (isPositive)
				success = pickOneTime(oneTimePositive);
			else
				success = pickOneTime(oneTimeNegative);

			if (success) continue;
		}

		if (isPositive) 
		{
			int idx = posDist(gen);
			result.events.push_back(positive[idx].name_event);
			result.totalIncome += positive[idx].income;
		}
		else 
		{
			int idx = negDist(gen);
			result.events.push_back(negative[idx].name_event);
			result.totalIncome += negative[idx].income;
		}
	}

	std::shuffle(result.events.begin(), result.events.end(), gen);
	return result;
}


void Alice_start() 
{
	Alice.age = 24;
	Alice.salary = 60'000;
	Alice.Sber.account_rub = 0;

	Alice.car.car_cost = 4'000'000; // toyota camry (RUB)
	Alice.car.fuel = 6'000;
	//Alice.car.mileage = 0;

	//Alice.credit.debt = 3'000'000;
	//Alice.credit.payment = 40'000;
	//alice.credit.month = (alice.credit.debt / alice.credit.payment);
}

void Alice_live()
{
	int month = 1;
	while (month < 13)
	{

		MonthResult Events = generateMonthlyEvents();
		Alice.Sber.account_rub += Events.totalIncome;
		/*for (auto& a : Events.events)
			std::cout << a << std::endl;
		std::cout << "Случайные траты за месяц >>> " << Events.totalIncome << std::endl;
		*/
        Alice.food_cost = Food(month, Alice.fridge, Alice.salary);
		Alice.Sber.account_rub -= Alice.food_cost;
		std::cout << Alice.food_cost << std::endl;
		//break;

		month++;
		if (month == 13)
		{
			Alice.age++;
			//year++;
			month = 1;
		}

		if (Alice.age == 97) break;
	}
}

void Alice_conclusion()
{
	Alice.Sber.print();
}

int main()
{
	setlocale(LC_ALL, "ru");

	Alice_start();

	Alice_live();

	Alice_conclusion();
}
